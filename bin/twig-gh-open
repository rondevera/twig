#!/usr/bin/env ruby

# Opens a browser window for the current GitHub repo.
#
# Author: Ron DeVera <http://rondevera.com>

require 'rubygems'
require 'twig'
require 'launchy'

Twig::GithubRepo.new do |gh_repo|
  url = "https://github.com/#{gh_repo.username}/#{gh_repo.repository}"
  puts "GitHub URL: #{url}"
  Launchy.open(url) rescue nil
end
